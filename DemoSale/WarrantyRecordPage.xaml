<Page x:Class="DemoSale.WarrantyRecordPage"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoSale"
      mc:Ignorable="d" 
      d:DesignHeight="1450" d:DesignWidth="800"
      Title="WarrantyRecordPage">

    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>

            <Menu MaxHeight="30" VerticalAlignment="Top" Margin="2">
                <MenuItem Header="File" FontSize="14">
                    <MenuItem Header="Exit"/>
                </MenuItem>
                <MenuItem Header="Help" FontSize="14">
                    <MenuItem Header="About"/>
                </MenuItem>
            </Menu>

            <GroupBox Margin="10" Grid.Row="1">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="{Binding ActualHeight, ElementName=textBlock, Mode=OneWay}" Source="/Resources/icons8-education-100.png"  />
                        <TextBlock x:Name="textBlock" FontSize="24" Padding="15" Text="Контрагент"/>
                    </StackPanel>
                </GroupBox.Header>

            </GroupBox>

            <GroupBox Grid.Row="2" Margin="10">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="{Binding ActualHeight, ElementName=textBlock1, Mode=OneWay}" Source="/Resources/icons8-airCar-100.png"/>
                        <TextBlock x:Name="textBlock1" FontSize="24" Padding="15" Text="Техника"/>
                    </StackPanel>
                </GroupBox.Header>
            </GroupBox>

            <GroupBox Grid.Row="3" Margin="10">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="{Binding ActualHeight, ElementName=textBlock2, Mode=OneWay}" Source="/Resources/icons8-repair-100.png" />
                        <TextBlock x:Name="textBlock2" FontSize="24" Padding="15" Text="Плановое ТО"/>
                    </StackPanel>
                </GroupBox.Header>
            </GroupBox>

        </Grid>
    </ScrollViewer>
</Page>
