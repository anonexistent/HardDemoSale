<Page x:Class="DemoSale.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoSale"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="500"
      Title="Page1">

    <Grid>
        <Image x:Name="img1" Source="/Resources/kartinki-pshenichnoe-pole-49.jpg" Stretch="Fill">
            <Image.Effect>
                    <BlurEffect KernelType="Gaussian" Radius="10" />
                </Image.Effect>
        </Image>


        <StackPanel Margin="5" VerticalAlignment="Center">
            <StackPanel Margin="15">
                <TextBlock Text="login:" Foreground="White" FontSize="20" FontWeight="Black" Margin="5"/>
                <TextBox/>
                <TextBlock Text="password:" Foreground="White" FontSize="20" FontWeight="Black" Margin="5"/>
                <TextBox/>
                <Button Content="sign in" Margin="5" FontSize="18" Click="Button_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
